<div>
    @if(ActionPanelTopSlot is not null)
    {
        <ActionPanelTop>
            <DefaultSlot>
                @ActionPanelTopSlot
            </DefaultSlot>
        </ActionPanelTop>
    }
    <article class ="content px-4">
        @DefaultSlot
    </article>
</div>

@code {
    [Parameter]
    public RenderFragment ActionPanelTopSlot { get; set; }

    [Parameter]
    public RenderFragment DefaultSlot { get; set; }
}